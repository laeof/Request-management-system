@model UserRole
<title>@ViewBag.Title</title>

<div class="wrap-login">
	<form asp-area=""
		  asp-controller="User"
		  asp-action="Edit"
		  method="post"
		  class="login-form"
		  asp-route-returnUrl="@ViewBag.ReturnUrl"
		  enctype="multipart/form-data">
		<span class="title">
			@ViewBag.Title
		</span>
		<input type="hidden" asp-for="User.Id" />
		<input type="hidden" asp-for="UserRoleId" />
		<div class="wrap-input">
			<img class="input-img" src="~/img/svg/user/namesurname.svg" />
			<input class="input login" type="text" placeholder="@ViewBag.FirstNamePlaceholder" asp-for="User.FirstName">
		</div>
		<div class="wrap-input">
			<img class="input-img" src="~/img/svg/user/namesurname.svg" />
			<input class="input login" type="text" placeholder="@ViewBag.SurnamePlaceholder" asp-for="User.Surname">
		</div>
		<div class="wrap-input">
			<input class="input login" type="hidden" placeholder="@ViewBag.UserNamePlaceholder" asp-for="User.Login">
		</div>
		<div class="wrap-input">
			<img class="input-img" src="~/img/png/key.png" />
			<input class="input password" type="password" placeholder="@ViewBag.PasswordPlaceholder" asp-for="User.Password">
		</div>
		<div class="wrap-input">
			<img class="input-img" src="~/img/svg/comment.svg" />
			<input class="input login" type="text" placeholder="@ViewBag.CommentPlaceholder" asp-for="User.Comment">
		</div>
		<div class="wrap-input">
			<img class="input-img" src="~/img/png/user.png" />
			<input class="input login" type="text" placeholder="@ViewBag.CommentPlaceholder" asp-for="User.IsActive">
		</div>
		<div class="wrap-input">
			<img class="input-img" src="~/img/svg/user/img.svg" />
			<label for="file" class="input login">@ViewBag.Avatar</label>
			<input type="file" name="AvatarFile" style="display: none" id="file" />
		</div>
		<div class="wrap-input">
			<img class="input-img" src="~/img/svg/user/role.svg" />
			<select class="input login" asp-for="RoleId">
				@if (User.IsInRole("admin"))
				{
					<option value="1">Admin</option>
					<option value="2">Manager</option>
				}
				<option value="3">Mounter</option>
			</select>
		</div>
		<div class="container-login-form-btn">
			<button class="login-form-btn" type="submit">
				Редагувати
			</button>
		</div>
	</form>
</div>