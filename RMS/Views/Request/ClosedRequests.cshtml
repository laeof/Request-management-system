@model IEnumerable<Request>
@using RMS.Models
@using RMS.Domain.Entities

@{
    ViewBag.Title = "Список заявок";
}

<h2>Список заявок</h2>
<a href="/Request/PlanningRequests">Запланованих заявок: @ViewBag.PlanningRequestsCount</a>
<a href="/Request/CurrentRequests">Поточних заявок: @ViewBag.CurrentRequestsCount</a>
<a href="/Request/ClosedRequests">Закритих заявок: @ViewBag.ClosedRequestsCount</a>
<a href="/Request/CancelledRequests">Відмінених заявок: @ViewBag.CancelledRequestsCount</a>
<div class="requests">
    <table class="table">
        <tr class="first-row">
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Priority)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lifecycle.Current)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lifecycle.Closed)
            </th>
            @if (User.IsInRole("admin") || User.IsInRole("manager"))
            {
                <th>
                    @Html.DisplayNameFor(model => model.Closed)
                </th>
            }
        </tr>

        @foreach (var item in Model)
        {
            string rowClass = "row";
            if (item.Priority == 1)
            {
                rowClass += " default";
            }
            else if (item.Priority == 2)
            {
                rowClass += " critical";
            }
            <tr>
                <th class="@rowClass">
                    @Html.DisplayFor(modelItem => item.Id)
                </th>
                <th class="@rowClass">
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </th>
                <th class="@rowClass">
                    @Html.Raw(PriorityModel.GetPriority(item.Priority))
                </th>
                <th class="@rowClass">
                    @Html.DisplayFor(modelItem => item.Comment)
                </th>
                <th class="@rowClass">
                    @Html.DisplayFor(modelItem => item.Address)
                </th>
                <th class="@rowClass">
                    @Html.DisplayFor(modelItem => item.Lifecycle.Current)
                </th>
                <th class="@rowClass">
                    @Html.DisplayFor(modelItem => item.Lifecycle.Closed)
                </th>
                <th class="@rowClass">
                    @if (User.IsInRole("admin") || User.IsInRole("manager"))
                    {
                        @Html.DisplayFor(modelItem => item.Closed.FirstName)
                        @Html.Raw(" ")
                        @Html.DisplayFor(modelItem => item.Closed.Surname)
                    }
                </th>
                <td>
                    @if (item.Lifecycle.Closed == null && item.Lifecycle.Cancelled == null)
                    {
                    
                    }
                </td>
            </tr>
        }
</table>
</div>