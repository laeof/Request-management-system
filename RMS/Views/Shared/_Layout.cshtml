@using RMS.Controllers
@{
	string containerClass = "container";
	if (ViewContext.RouteData.Values["controller"].ToString() == "Account" && ViewContext.RouteData.Values["action"].ToString() == "Login")
	{
		containerClass += " auth";
	}
}
<!DOCTYPE html>
<html lang="en">
	<head>
		@await Html.PartialAsync("MetatagsPartial")
		@await Html.PartialAsync("CssPartial")
	<link rel="icon" href="~/img/ico/favicon.ico" type="image/x-icon">
	</head>
	<body>
			@if (User.Identity.IsAuthenticated)
			{
				<vc:Leftmenu />
			}
		<div class="@containerClass" id="container">
			@await Html.PartialAsync("HeaderPartial")

			<div class="content">
				@RenderBody()

			</div>
			<footer class="footer">

			@await Html.PartialAsync("FooterPartial")

			</footer>
		</div>
	@await Html.PartialAsync("ScriptsPartial")

	</body>
</html>