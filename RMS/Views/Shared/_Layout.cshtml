<!DOCTYPE html>
<html lang="en">
	<head>
		@await Html.PartialAsync("MetatagsPartial")
		@await Html.PartialAsync("CssPartial")
	</head>
	<body>
		<div class="container">
			@await Html.PartialAsync("LeftmenuPartial")
			<div class="main">
				<header class="header">
					@await Html.PartialAsync("HeaderPartial")
				</header>
				<div class="content">
					@RenderBody()
				</div>
				<footer class="footer">
					@await Html.PartialAsync("FooterPartial")
				</footer>
			</div>
		</div>
		@await Html.PartialAsync("ScriptsPartial")
	</body>
</html>