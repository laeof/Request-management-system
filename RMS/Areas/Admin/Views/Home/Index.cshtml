@model IQueryable<ServiceItem>
@{
	string strTitle = "Панель администратора";
	ViewBag.Title = strTitle;
}

<div>
	<h1>@strTitle</h1>
	<div>
		<h3>Our services</h3>
		<div class="div-box">
			<a asp-area="Admin" asp-controller="ServiceItems" asp-action="Edit" asp-route-id="">Add service</a>
		</div>
		@if (Model.Any())
		{
			<div>
				@foreach (ServiceItem entity in Model)
				{
					<div>
						<a asp-area="Admin" asp-controller="ServiceItems" asp-action="Edit" asp-route-id="@entity.Id">Edit</a>
						<form style="display: inline-block" id="form-@entity.Id" 
							asp-area="Admin" 
							asp-controller="ServiceItems" 
							asp-action="Delete" method="post">
							<input type="hidden" name="id" value="@entity.Id">
							<a href="#" onclick="document.getElementById("form-@entity.Id").submit();">Delete</a>
						</form>
						<a asp-area="" asp-controller="Services" asp-action="Index" asp-route-id="@entity.Id">
							@($"{entity.Title}")
						</a>
					</div>
				}
			</div>
		}
	</div>
	<div class="div-box">
		<h3>Edit pages of website</h3>
		<a asp-area="Admin" asp-controller="TextFields" asp-action="Edit" asp-route-codeWord="PageIndex">Main</a>
		<a asp-area="Admin" asp-controller="TextFields" asp-action="Edit" asp-route-codeWord="PageGuarantees">Guarantees</a>
		<a asp-area="Admin" asp-controller="TextFields" asp-action="Edit" asp-route-codeWord="PageDelivery">Delivery</a>
	</div>
	<div class="div-box">
		<form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
			<input type="submit" value="Exit"/>
		</form>
	</div>
</div>